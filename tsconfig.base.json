{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@prt-ts/debounce": ["packages/debounce/src/index.ts"],
      "@prt-ts/export-helpers": ["packages/export-helpers/src/index.ts"],
      "@prt-ts/fluent-common-features": [
        "packages/fluent-common-features/src/index.tsx"
      ],
      "@prt-ts/fluent-formik": ["packages/fluent-formik/src/index.ts"],
      "@prt-ts/fluent-react-hook-form": [
        "packages/fluent-react-hook-form/src/index.ts"
      ],
      "@prt-ts/fluent-react-table-v2": [
        "packages/fluent-react-table-v2/src/index.ts"
      ],
      "@prt-ts/fluent-spfx-core": ["packages/fluent-spfx-core/src/index.ts"],
      "@prt-ts/fluent-theme": ["packages/fluent-theme/src/index.ts"],
      "@prt-ts/pdf-json-helpers": ["packages/pdf-json-helper/src/index.ts"],
      "@prt-ts/react-control-flow": [
        "packages/react-control-flow/src/index.ts"
      ],
      "@prt-ts/spfx-common": ["packages/spfx-common/src/index.js"],
      "@prt-ts/utilities": ["packages/utilities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
